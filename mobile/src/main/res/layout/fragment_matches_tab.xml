<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MatchesTabFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/matchday1_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MATCHDAY 1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.ausoccer.ausoccerintramurlasadmin.CustomListView
                android:id="@+id/matchday1_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/matchday1_header"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/matchday2_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/matchday1_list"
                android:text="MATCHDAY 2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.ausoccer.ausoccerintramurlasadmin.CustomListView
                android:id="@+id/matchday2_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/matchday2_header"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/matchday3_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/matchday2_list"
                android:text="MATCHDAY 3"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.ausoccer.ausoccerintramurlasadmin.CustomListView
                android:id="@+id/matchday3_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/matchday3_header"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/matchday4_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/matchday3_list"
                android:text="MATCHDAY 4"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.ausoccer.ausoccerintramurlasadmin.CustomListView
                android:id="@+id/matchday4_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/matchday4_header"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/matchday5_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/matchday4_list"
                android:text="MATCHDAY 5"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.ausoccer.ausoccerintramurlasadmin.CustomListView
                android:id="@+id/matchday5_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/matchday5_header"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/matchday6_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/matchday5_list"
                android:text="MATCHDAY 6"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.ausoccer.ausoccerintramurlasadmin.CustomListView
                android:id="@+id/matchday6_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/matchday6_header"
                android:layout_marginTop="16dp" />


        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_match_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/add"
        app:fabSize="normal" />


</RelativeLayout>